file = {:C\:/Users/rniewoeh/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Gupta, Simon, Wing - 2020 - Mandated and Voluntary Social Distancing During The COVID-19 Epidemic A Review(2).pdf:pdf},
journal = {NBER Working Paper Series},
title = {{Mandated and Voluntary Social Distancing During The COVID-19 Epidemic: A Review}},

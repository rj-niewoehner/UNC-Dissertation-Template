journal = {Journal of Operations Management},
keywords = {Customer prioritization,Focused and flexible resources,Service system design},
number = {March},
pages = {15--26},
title = {{Managing responsiveness in the emergency department: Comparing dynamic priority queue with fast track}},
volume = {58-59},
